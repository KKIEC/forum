<div class="container-fluid mt-3 mb-3 text-center col-4">
  <h2>Sign up:</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="card">
      <div class="mb-2 mt-3">
        <h5>
          <%= f.label :name, "Name:" %>
        </h5>
        <p>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-2">
        <h5>
          <%= f.label :email, "Email:" %>
        </h5>
        <p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-2">
        <h5>
          <%= f.label :password, "Password:" %>
        </h5>
        <p>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-2">
        <h5>
          <%= f.label :password_confirmation, "Password confirmation:" %>
        </h5>
        <p>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-3">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container text-center mb-3">
  <%= render "devise/shared/links" %>
</div>
