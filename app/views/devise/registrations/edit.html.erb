<div class="container-fluid mt-3 mb-3 text-center col-4">
  <h2>Edit <%= resource_name.to_s.humanize %>:</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="card mb-3">
      <div class="mb-2 mt-3">
        <h5>
          <%= f.label :name, "Name:" %>
        </h5>
        <p>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-2">
        <h5>
          <%= f.label :email, "Email:" %>
        </h5>
        <p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "container col-8" %>
        </p>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-2">
        <h5>
          <%= f.label :password, "Password:" %>
        </h5>
        <p>
          <i>(leave blank if you don't want to change it)</i>
          <br />
          <%= f.password_field :password, autocomplete: "new-password", class: "container col-8" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </p>
      </div>

      <div class="mb-2">
        <h5>
          <%= f.label :password_confirmation, "Password confirmation:" %>
        </h5>
        <p>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-2">
        <h5>
          <%= f.label :current_password, "Current password:" %>
        </h5>
        <p>
          <i>(we need your current password to confirm your changes)</i>
          <br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "container col-8" %>
        </p>
      </div>

      <div class="mb-3">
        <%= f.submit "Update", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="card">
    <h3>Cancel my account:</h3>
    <p>Unhappy?
      <%= button_to "Cancel my account", registration_path(resource_name),
        data: { confirm: "Are you sure?" }, method: :delete,
        class: "btn btn-danger" %>
    </p>
  </div>
</div>

<div class="container text-center mb-3">
  <%= link_to "Back", :back, class: "btn btn-primary" %>
</div>
