%div{class: "container mt-3 text-center"}
  %h2 Categories:

%div{class: "container col-4 text-center"}
  %table{class: "table table-bordered table-hover"}
    %thead{class: "table-primary"}
      %tr
        %th{class: "col-8"} Name
        %th{colspan: "3", class: "col-4"} Allowable actions

    %tbody
      - @categories.each do |category|
        %tr{style: "vertical-align: middle"}
          %td
            = category.name
          %td
            = link_to 'Show', category, class: "btn btn-outline-primary"
          %td
            - if can? :update, category
              = link_to 'Edit', edit_category_path(category), class: "btn btn-outline-primary"
          %td
            - if can? :destroy, category
              = link_to 'Destroy', category, method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-outline-danger"

  %div{class: "container text-center mb-3"}
    - if can? :create, Category
      = link_to 'New Category', new_category_path, class: "btn btn-success"
