%div{class: "container mt-3 mb-3 text-center"}

  %h2
    = @category.name

  %p
    %strong Created by:
    = @created_by.name

  %h3
    Topics:

%div{class: "container col-8 text-center"}
  - if @associated_topics.present?
    %table{class: "table table-bordered table-hover"}
      %thead{class: "table-primary"}
        %tr
          %th{class: "col-3"} Name
          %th{class: "col-8"} Description
          %th{style: "text-align: center", colspan: "3", class: "col-1"} Action

      %tbody
        - @associated_topics.each do |topic|
          %tr{style: "vertical-align: middle"}
            %td
              = topic.name
            %td
              = topic.description
            %td
              = link_to 'Show', topic, class: "btn btn-outline-primary"
  - else
    %p
      "None"

  %div{class: "container text-center mb-3"}
    - if can? :update, @category
      = link_to 'Edit', edit_category_path(@category), class: "btn btn-primary"
      |
      = link_to 'Back', categories_path, class: "btn btn-primary"
