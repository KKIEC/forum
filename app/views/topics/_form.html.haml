= form_with(model: topic) do |form|
  - if topic.errors.any?
    %div{class: "alert alert-danger"}
      %h3
        = pluralize(topic.errors.count, "error")
        prohibited this topic from being saved:

      %ul
        - topic.errors.full_messages.each do |message|
          %li
            = message

  %div{class: "card"}
    %div{class: "mb-2 mt-3"}
      %h5
        = form.label :name, "Name:"
      %p
        = form.text_field :name

    %div{class: "mb-2"}
      %h5
        = form.label :description, "Description:"
      %p
        = form.text_field :description

    %div{class: "mb-2"}
      %h5
        = form.label :category_ids, "Select category:"
      %p
        = form.collection_check_boxes(:category_ids, @categories, :id, :name) do |b|
          %p{class: "mb-1"}
            = b.check_box
            = b.label

    %div{class: "mb-3"}
      = form.submit class: "btn btn-success"
