%div.container.mt-3.mb-3.text-center
  %h2 Topics:

  = form_with url: topics_path, method: :get do |f|
    %div.container.text-center
      %h5
        = f.label :search, "Search by name:"
      %p
        = f.text_field :search, class: "container col-4"
    %div.mb-3
      = f.submit "Search", name: nil, class: "btn btn-secondary"

%div.container.col-12.text-center
  %table.table.table-bordered.table-hover
    %thead.table-primary
      %tr
        %th.col-2 Name
        %th.col-6 Description
        %th.col-2 Categories
        %th.col-2{style: "text-align: center", colspan: "3"} Allowable actions

    %tbody
      - @topics.each do |topic|
        %tr{style: "vertical-align: middle"}
          %td
            = topic.name
          %td
            = topic.description
          %td
            - topic.categories.each do |cat|
              = cat.name
              %br
          %td
            = link_to 'Discussion', topic, class: "btn btn-outline-primary"
          %td
            - if can? :update, topic
              = link_to 'Edit', edit_topic_path(topic), class: "btn btn-outline-primary"
          %td
            - if can? :destroy, topic
              = link_to 'Destroy', topic, method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-outline-danger"

  %div.container.mb-3
    - if can? :create, Topic
      = link_to 'New Topic', new_topic_path, class: "btn btn-success"
