%p
  %strong Name:
  = @topic.name

%p
  %strong Description:
  = @topic.description

  %strong Created by:
  = @created_by.name

Posts:

- if @associated_posts.present?
  %table
    %thead
      %tr
        %th Name
        %th Body
        %th{colspan: "3"}

    %tbody
      - @associated_posts.each do |post|
        %tr
          %td
            = post.name
          %td
            = post.body
          %td
            = link_to 'Show', post
- else
  "None"

%br

= link_to 'Edit', edit_topic_path(@topic)
|
= link_to 'Back', topics_path
