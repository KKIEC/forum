= render 'shared/errors', obj: user
= form_with(model: user) do |form|

  %div.form-group.row.mb-2.text-start
    = form.label :name, "Name:", class: "col-form-label fs-5 fw-bolder"
    %div
      = form.text_field :name, class: "form-control shadow rounded"

  %div.form-group.row.mb-2.text-start
    = form.label :email, "Email:", class: "col-form-label fs-5 fw-bolder"
    %div
      = form.text_field :email, class: "form-control shadow rounded"

  %div.form-group.row.mb-2.text-start
    = form.label :password, "Password:", class: "col-form-label fs-5 fw-bolder"
    %div
      = form.password_field :password,
      placeholder: "Leave blank if unchanged",
      class: "form-control shadow rounded"

  %div.form-group.row.mb-4.text-start
    = form.label :role, "Select role:", class: "col-form-label fs-5 fw-bolder"
    %div
      = select(:user, :role, User.roles.keys,
      { prompt: true },
      class: "form-select")

  %div.text-end
    = form.submit class: "btn btn-outline-success shadow"
