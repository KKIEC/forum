%div{class: "container mt-3 text-center"}
  %h2 Role:

%div{class: "container col-4 text-center"}
  %div{class: "card p-3 mb-3"}
    %h5
      %strong Name:
    %p
      = @role.name

    %h5
      %strong Description:
    %p
      = @role.description

    %h5
      %strong Associated users:
    %p
      = @associated_users

%div{class: "container text-center mb-3"}
  = link_to 'Edit', edit_role_path(@role), class: "btn btn-primary"
  |
  = link_to 'Back', roles_path, class: "btn btn-primary"
