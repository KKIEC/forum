%div.container.mt-3.text-center
  %h2 Roles:

%div.container.col-6.text-center
  %table.table.table-bordered.table-hover
    %thead.table-primary
      %tr
        %th.col-2 Name
        %th.col-8 Description
        %th.col-2{colspan: "3"} Allowable actions

    %tbody
      - @roles.each do |role|
        %tr{style: "vertical-align: middle"}
          %td
            = role.name
          %td
            = role.description
          %td.text-center
            = link_to 'Show', role, class: "btn btn-outline-primary"
          %td.text-center
            = link_to 'Edit', edit_role_path(role), class: "btn btn-outline-primary"
          %td.text-center
            = link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' },
            class: "btn btn-outline-danger"

%div.container.text-center.mb-3
  = link_to 'New Role', new_role_path, class: "btn btn-success"
